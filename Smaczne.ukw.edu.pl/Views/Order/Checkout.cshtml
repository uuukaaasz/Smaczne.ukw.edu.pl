@model Order
<h2>Wysyłka</h2>
<p>Proszę podać swoje dane, a zamówione produkty zostaną natychmiast wysłane!</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <h3>Nabywca</h3>
    <div class="form-group">
        <label>Imie i nazwisko:</label><input asp-for="Name" class="form-control" />
    </div>
    <h3>Adres</h3>
    <div class="form-group">
        <label>Wiersz 1:</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Wiersz 2:</label><input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Wiersz 3:</label><input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>Miasto:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Województwo:</label><input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kod pocztowy:</label><input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kraj:</label><input asp-for="Country" class="form-control" />
    </div>
    <h3>Opcje</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWrap" /> Zapakowanie jako prezent
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Złóż zamówienie" />
    </div>
</form>